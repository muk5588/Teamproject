<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="dao.face.LoginDao">

	<sql id="basicSelect">
		SELECT loginno, loginid, loginpw FROM logintb
		<where>
			AND loginid = #{loginid }
			AND loginpw = #{loginpw }
		</where>
	</sql>

	<select id="selectCntLogin" resultType="int" parameterType="Login">
		SELECT count(*) FROM (
			<include refid="basicSelect" />
		)
	</select>

	<select id="selectLogin" resultType="Login" parameterType="Login">
		<include refid="basicSelect" />
	</select>

</mapper>














